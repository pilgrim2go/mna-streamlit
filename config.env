# Elasticsearch Configuration
ES_HOST=http://toolaws:9200
ES_USERNAME=vector  
ES_PASSWORD=vector
# OR use API key instead of username/password:
# ES_API_KEY=your_api_key

# SSL/TLS Configuration
ES_VERIFY_CERTS=false

# Query Configuration
ES_INDEX=testnet_2025-07-*
# Container name to search for (using container_name.keyword field)
CONTAINER_NAME=02650A59-df553822725036c62e52e0fa7732560b49b4481dd5f3819ecdcc552ed1bab19d-99
DAYS_BACK=2
# Hours back to search (alternative to DAYS_BACK, takes precedence if both are set)
HOURS_BACK=120

# Timezone Configuration
# Use UTC time for queries (recommended for Elasticsearch)
# Set to 'false' if you want to use local system time instead
USE_UTC_TIME=true

# S3 Configuration
S3_BUCKET=chromaway-tmp
S3_PREFIX=parsed-logs
AWS_REGION=eu-north-1
AWS_PROFILE=default

# Output Configuration
# OUTPUT_FILE will be automatically generated as <ES_INDEX>_exported_data.csv
# You can override this by uncommenting and setting a custom name below:
# OUTPUT_FILE=custom_export_name.csv

# Performance and Memory Management
# Maximum number of records to export (default: 1,000,000)
MAX_RECORDS=101101101101

# Number of records per scroll batch (default: 1000)
# Increase for faster processing, decrease if you get timeouts
CHUNK_SIZE=10000

# Scroll timeout (default: 5m)
# Increase if you have slow network or large documents
SCROLL_TIMEOUT=5m

# Enable progress bar (default: true)
ENABLE_PROGRESS_BAR=true

# Split large exports into multiple files (default: false)
# Automatically enabled for exports > 100k records
CHUNKED_OUTPUT=true 